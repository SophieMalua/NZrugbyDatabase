@model IEnumerable<NZrugbyDatabase.Models.Manager>

@{
    ViewData["Title"] = "Managers";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Manager" asp-action="Index">
    <p>
        Manager <input type="text" name="searchTerm" />
        @*<input type="submit" value="Search"/>*@
        <button type="submit" class="btn btn-Manager">Search</button>
    </p>
</form>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Experience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team.TeamID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ManagerID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ManagerID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ManagerID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
